class LS_SERVER_CALL_HIERARCHY_PREPARE_REQUEST_HANDLER

inherit

	LS_CALL_HIERARCHY_PREPARE_REQUEST_HANDLER
		redefine
			handle,
			message_manager
		end

create

	make

feature -- Basic operations

	handle (a_request: like request; a_manager: like message_manager)
			-- Handle `a_request`.
		local
			l_response: LS_CALL_HIERARCHY_PREPARE_RESPONSE
		do
			create l_response.make (a_request.id)
			a_manager.on_call_hierarchy_prepare_request (a_request, l_response)
			a_manager.send_message (l_response)
		end

feature {NONE} -- Implementation

	message_manager: LS_SERVER_MESSAGE_MANAGER
			-- Type of the surrounding message manager
		do
			check False then end
		end

end
